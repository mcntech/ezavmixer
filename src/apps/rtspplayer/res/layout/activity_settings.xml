<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ScrollView  android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

	
	    	<TextView android:layout_width="100dp"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center"
	    		 android:background="#DCDCDC"
	    		android:textColor="#000000" 
	    		android:layout_marginBottom="20dp"
	    		android:layout_marginTop="10dp" 
	    		android:gravity="center"
	    		android:text="@string/options" 
	    		android:textStyle="bold"
	    		android:textSize="20sp" />
	   

	    <CheckBox
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/enable_audio"
	        android:text="@string/enable_audio" 
	         android:padding="15dp"
	         android:paddingTop="25dp"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:textStyle="bold" 
	        android:checked="true" />
	   
	   
	   <CheckBox
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/enable_auto_start" 
	        android:layout_gravity ="right"
	         android:padding="15dp"
	         android:paddingTop="25dp"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:textStyle="bold" 
	        android:checked="true" 
	        android:id="@+id/enable_auto_start" /> 

<!-- 	   <CheckBox
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/enable_logo" 
	        android:layout_gravity ="right"
	        android:checked="true" 
	        android:id="@+id/enable_logo" /> 
-->

	   <CheckBox
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Stats" 
	        android:layout_gravity ="right"
	        android:paddingTop="25dp"
	         android:padding="15dp"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:textStyle="bold" 
	        android:checked="true" 
	        android:id="@+id/enable_stats" />

	   <CheckBox
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Enable Channel List" 
	        android:layout_gravity ="right"
	        android:paddingTop="25dp"
	         android:padding="15dp"
	         android:textColor="#FFFFFF"
	         android:textSize="20sp"
	         android:textStyle="bold" 
	        android:checked="true" 
	        android:id="@+id/enable_channel_list" />
	   	   
		<TextView
	       android:id="@+id/textRtspUrl1"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="RTSP URL"
	       android:paddingTop="25sp"
	       android:paddingBottom="5dp"
	         android:textColor="#FFFFFF"
	         android:textStyle="bold" 
	       android:textAppearance="?android:attr/textAppearanceMedium" />

	   <EditText
	       android:id="@+id/editRtspUrl1"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:ems="10" >

	       <requestFocus />
	   </EditText>

	   <Button
	       android:id="@+id/restart"
	       android:layout_width="100dp"
	       android:layout_height="wrap_content"
	       android:layout_marginTop="30dip"
	       android:onClick="selfRestart"
	       android:text="Start"
	       android:textColor="#000000"
	       android:textSize="20sp"
	       android:layout_gravity="center_horizontal"
	       android:textStyle="bold" />
   
	   </LinearLayout>  
	 </ScrollView>
</LinearLayout>
